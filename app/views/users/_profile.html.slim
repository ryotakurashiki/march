.profile
  .profile-header.clearfix
    .icon
      = image_tag(user.icon_path, size: "73x73")
      /= image_tag("default_icon.png", size: "73x73")
    .name
      span.username_jp = user.username_jp
      br
      - if user.provider
        = link_to "https://twitter.com/#{user.username}", class: "twitter-link"
          span.twitter-iqon
            i.fa.fa-twitter
          span.username = user.username
      - else
        span.username = user.username
      /- if user.id == current_user.id
      - if user == current_user
        = link_to "編集", account_path, method: "get", class: "btn btn-sm edit"
  .description
    = user.description
  /.schedule
    p 次の参加予定
    = user.next_live.title
    p 最近参加したライブ
    = user.last_live.title
